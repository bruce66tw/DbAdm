<!-- Table編輯畫面 nav/tab/buttons -->
<div class="xg-btns-box">
    <span class="xg-block-label">編輯畫面</span>
    <button type='button' class='btn xg-btn' onclick='_me.onEtableAdd()'>新增</button>
